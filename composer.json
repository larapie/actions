{
    "name": "larapie/actions",
    "description": "Laravel components that take care of one specific task",
    "keywords": [
        "laravel",
        "component",
        "action"
    ],
    "homepage": "https://github.com/larapie/actions",
    "license": "MIT",
    "authors": [
        {
            "name": "Loris LEIVA",
            "email": "loris.leiva@gmail.com",
            "homepage": "https://lorisleiva.com"
        }
    ],
    "require": {
        "illuminate/support": "~5.8|~6.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0.0",
        "orchestra/testbench": "~3.8.0",
        "phpunit/phpunit" : "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Larapie\\Actions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Larapie\\Actions\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Larapie\\Actions\\LarapieActionServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}